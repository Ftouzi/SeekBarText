<resources>

    <style name="AppBaseTheme" parent="@android:style/Theme.Light.NoTitleBar"></style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme"></style>

    <!-- SeekBar style. -->
    <style name="tallerBarStyle" parent="@android:style/Widget.SeekBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/progress_stat</item>
        <item name="android:indeterminateDrawable">@android:drawable/progress_horizontal</item>
        <item name="android:minHeight">7dp</item>
        <item name="android:maxHeight">7dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">7dp</item>
    </style>

</resources>